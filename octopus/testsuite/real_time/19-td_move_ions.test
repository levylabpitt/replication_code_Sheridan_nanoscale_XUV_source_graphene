# -*- coding: utf-8 mode: shell-script -*-

Test       : Time propagation with moving ions
Program    : octopus
TestGroups : long-run, real_time
Enabled    : Yes

# This test checks the time-propagation.

# ground state
Processors : 4
Input      : 19-td_move_ions.01-gs.inp
match ; SCF convergence ; GREPCOUNT(static/info, 'SCF converged') ; 1
Precision: 1.48e-09
match ;  Initial energy  ; GREPFIELD(static/info, 'Total       =', 3) ; -29.644378389999996

# time-propagation with moving ions
Processors : 4
Input      : 19-td_move_ions.02-td.inp
Precision: 1.48e-12
match ;  Energy [step 10]  ; LINEFIELD(td.general/energy, -11, 3) ; -29.644418690438602
Precision: 3.30e-13
match ;  Energy [step 20]  ; LINEFIELD(td.general/energy, -1, 3) ; -29.644541162971798
Precision: 1.32e-15
match ;  X Coordinate Atom 1 [step 10]  ; LINEFIELD(td.general/coordinates, -11, 3) ; -0.264633228611407
Precision: 1.32e-14
match ;  X Coordinate Atom 1 [step 20]  ; LINEFIELD(td.general/coordinates, -1, 3) ; -0.264767009800695
Precision: 1.21e-14
match ;  X Velocity Atom 1 [step 10]  ; LINEFIELD(td.general/coordinates, -11, 9) ; -0.002428123005953
Precision: 2.43e-16
match ;  X Velocity Atom 1 [step 20]  ; LINEFIELD(td.general/coordinates, -1, 9) ; -0.00485146228958725
Precision: 7.96e-13
match ;  X Force Atom 1 [step 10]  ; LINEFIELD(td.general/coordinates, -11, 15) ; -15.918964664306701
Precision: 7.94e-13
match ;  X Force Atom 1 [step 20]  ; LINEFIELD(td.general/coordinates, -1, 15) ; -15.8743078300614

# restart of time-propagation with moving ions
Processors : 4
Input      : 19-td_move_ions.03-td_restart.inp
Precision: 1.48e-12
match ;  Energy [step 15]  ; LINEFIELD(td.general/energy, -11, 3) ; -29.644745583558002
Precision: 1.48e-12
match ;  Energy [step 20]  ; LINEFIELD(td.general/energy, -1, 3) ; -29.6450323990614
Precision: 1.32e-14
match ;  X Coordinate Atom 1 [step 30]  ; LINEFIELD(td.general/coordinates, -11, 3) ; -0.264989698115423
Precision: 1.33e-15
match ;  X Coordinate Atom 1 [step 40]  ; LINEFIELD(td.general/coordinates, -1, 3) ; -0.265300899044235
Precision: 3.63e-16
match ;  X Velocity Atom 1 [step 30]  ; LINEFIELD(td.general/coordinates, -11, 9) ; -0.00726602678624283
Precision: 4.83e-16
match ;  X Velocity Atom 1 [step 40]  ; LINEFIELD(td.general/coordinates, -1, 9) ; -0.009667899731336301
Precision: 7.90e-12
match ;  X Force Atom 1 [step 30]  ; LINEFIELD(td.general/coordinates, -11, 15) ; -15.803865466118
Precision: 7.85e-13
match ;  X Force Atom 1 [step 40]  ; LINEFIELD(td.general/coordinates, -1, 15) ; -15.707794025238101
