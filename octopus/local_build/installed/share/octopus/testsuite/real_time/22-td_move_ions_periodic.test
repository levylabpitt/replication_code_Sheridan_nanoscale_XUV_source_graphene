# -*- coding: utf-8 mode: shell-script -*-

Test       : Time propagation with moving ions
Program    : octopus
TestGroups : long-run, real_time
Enabled    : Yes

# This test checks the time-propagation.

# ground state
Processors : 4
Input      : 22-td_move_ions_periodic.01-gs.inp
match ; SCF convergence ; GREPCOUNT(static/info, 'SCF converged') ; 1
Precision: 1.48e-07
match ;  Initial energy  ; GREPFIELD(static/info, 'Total       =', 3) ; -29.64350099

# time-propagation with moving ions
Processors : 4
Input      : 22-td_move_ions_periodic.02-td.inp
Precision: 2.19e-13
match ;  Energy [step 10]  ; LINEFIELD(td.general/energy, -11, 3) ; -24.6911111323917
Precision: 1.23e-12
match ;  Energy [step 20]  ; LINEFIELD(td.general/energy, -1, 3) ; -24.6940870256586
Precision: 1.57e-14
match ;  X Coordinate Atom 1 [step 10]  ; LINEFIELD(td.general/coordinates, -11, 3) ; -0.314892662975698
Precision: 1.60e-08
match ;  X Coordinate Atom 1 [step 20]  ; LINEFIELD(td.general/coordinates, -1, 3) ; -0.320707739
Precision: 7.89e-15
match ;  X Velocity Atom 1 [step 10]  ; LINEFIELD(td.general/coordinates, -11, 9) ; -0.157836932554987
Precision: 7.93e-15
match ;  X Velocity Atom 1 [step 20]  ; LINEFIELD(td.general/coordinates, -1, 9) ; -0.158613863610968
Precision: 2.78e-11
match ;  X Force Atom 1 [step 10]  ; LINEFIELD(td.general/coordinates, -11, 15) ; -5.51931923070772
Precision: 3.14e-11
match ;  X Force Atom 1 [step 20]  ; LINEFIELD(td.general/coordinates, -1, 15) ; -4.6796146863878105
