CalculationMode = em_resp
PeriodicDimensions = 3
BoxShape = parallelepiped
FromScratch=yes

a = 5.64*angstrom

%LatticeParameters
 a | a | a
 90 | 90 | 90
%
Spacing = 0.7

%ReducedCoordinates
 "Ar" | 0 | 0 | 0
%
PseudopotentialSet = hgh_lda

%KPointsGrid
 2 | 2 | 2
%

ExtraStates = 0
ExperimentalFeatures = yes
RestartFixedOccupations = no
%EMFreqs 
1 | 0.1
%

XCKernelLRCAlpha = 0.2

LinearSolver = qmr_dotp
LRTolInitTol = 1e-5
LinearSolverMaxIter = 100
EMEta = 0.01
KdotPEta = 0.01
EMPerturbationType = electric
EMCalcMagnetooptics = true
EMKPointOutput = true


